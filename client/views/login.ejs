<section>
  


 <div class="container">
        <div class="card card-container">
           
            <img id="profile-img" class="profile-img-card" src="../images/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>
            <form name="form" ng-submit="login()">
    <fieldset>
      <legend>Iniciar Sesion:</legend>
 <span id="reauth-email" class="reauth-email"></span>
      <div class="form-group">
        <label>Email</label>
       <input class="form-control"  type="email" ng-model="user.email" placeholder="Email">
        <p class="alert alert-danger" ng-show="form.email.$error.required && submitted">Email es Requerida</p>
      </div>

      <div class="form-group">
        <label>Password</label>
        <input class="form-control" type="password" ng-model="user.password" placeholder="Contraseña">
        <p class="alert alert-danger" ng-show="form.password.$error.required && submitted">
            Password es Requerida</p>
      </div>
     <div class="form-group">
           <a ui-sref="sign-up" ui-sref-active="active">Registrate</a><br>
           <a ui-sref="reset1">Olvido su Contraseña</a>
        </div>
      <div class="actions">
        <label></label>
        <button class="btn btn-success">Loguearse</button>
      </div>
    </fieldset>
  </form>

         
        </div><!-- /card-container -->
    </div><!-- /container -->
</section>
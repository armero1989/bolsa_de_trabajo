<section>
 <div class="container">
        <div class="card card-container">
           
            <img id="profile-img" class="profile-img-card" src="../images/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>
  <form name="form" ng-submit="resetear()">
    <fieldset>
      <legend>Resetear Contraseña</legend>
      <span id="reauth-email" class="reauth-email"></span>
      <div class="form-group">
        <label>Email</label>
       <input class="form-control"  type="text" ng-model="user.email" placeholder="Email">
        <p class="alert alert-danger" ng-show="form.email.$error.required && submitted">Email es Requerida</p>
      </div>
       <div class="actions">
        <label></label>
        <button class="btn btn-success">Resetear Contraseña</button>
      </div>
    </fieldset>
  </form>
     </div><!-- /card-container -->
    </div><!-- /container -->

</section>
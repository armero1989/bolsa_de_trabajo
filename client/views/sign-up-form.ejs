<section>
  <form name="form" ng-submit="register()">
    <fieldset>
      <legend>Registro:</legend>
      
      <div class="form-group">
        <label>Nombre</label>
        <input class="form-control"  name="nombre" type="text" ng-model="user.nombre" placeholder="Nombre de Usuario">
        <p class="alert alert-danger" ng-show="form.nombre.$error.required && submitted">
            Nombre es Requerida</p>
      </div>

      <div class="form-group">
        <label>Email</label>
        <input class="form-control" name="email" type="text" ng-model="user.email" placeholder="Email">
        <p class="alert alert-danger" ng-show="form.email.$error.required && submitted">Email es Requerida</p>
      </div>

      <div class="form-group">
        <label>Password</label>
        <input class="form-control" name="password" type="password" ng-model="user.password" placeholder="Contraseña">
        <p class="alert alert-danger" ng-show="form.password.$error.required && submitted">
            Contraseña es Requerida</p>
      </div>

      <div class="actions">
        <label></label>
        <button class="btn btn-danger">Sign up</button>
      </div>
    </fieldset>
  </form>
</section>

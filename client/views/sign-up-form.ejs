<section>
  

<div class="container">
        <div class="card card-container">
            <img id="profile-img" class="profile-img-card" src="../images/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>
           
    <form name="form" ng-submit="register()">
    <fieldset>
      <legend>Registro:</legend>
      
      <div class="form-group">
        <label>Nombre</label>
        <input class="form-control"  name="nombre" type="text" ng-model="user.nombre" placeholder="Nombre de Usuario">
        <p class="alert alert-danger" ng-show="form.nombre.$error.required && submitted">
            Nombre es Requerida</p>
      </div>
      
 <div class="form-group">
        <label>Telefono</label>
        <input class="form-control" type="text" ng-model="user.telefono" placeholder="Telefono de Contacto" value="" pattern="^(?:0|\(?\+34\)?\s?|0034\s?)[1-79](?:[\.\-\s]?\d\d){4}$">
        <p class="alert alert-danger" ng-show="form.fecha_nac.$error.required && submitted">
          Fecha de Nacimiento es Requerido</p>
      </div>
      <div class="form-group">
        <label>Email</label>
        <input class="form-control" name="email" type="email" ng-model="user.email" placeholder="Email">
        <p class="alert alert-danger" ng-show="form.email.$error.required && submitted">Email es Requerida</p>
      </div>

      <div class="form-group">
        <label>Password</label>
        <input class="form-control" name="password" type="password" ng-model="user.password" placeholder="Contraseña">
        <p class="alert alert-danger" ng-show="form.password.$error.required && submitted">
            Contraseña es Requerida</p>
      </div>
        <div class="form-group">
        <a  ui-sref="login"  ui-sref-active="active">Iniciar Sesion</a><br>
         <!-- <a ui-sref="forbidden">Olvido su Contraseña</a> -->
        </div>
      <div class="actions">
        <label></label>
        <button class="btn btn-success" >Registrarse</button>
      </div>
    </fieldset>
  </form>

        </div><!-- /card-container -->
    </div><!-- /container -->
    </section>
<section>
 <div class="container">
        <div class="card card-container">

         <form name="form" ng-submit="submitForm()">
    <fieldset>
      <legend>{{action}} Empresa:</legend>
 <span id="reauth-email" class="reauth-email"></span>
 	 <div class="form-group">
        <label>CIF de la Empresa</label>
       <input class="form-control"  type="text" ng-model="Empresa.cif" placeholder="Forma:'X1234567X'o'X12345678'" pattern="[A-Za-z]{1}[0-9]{7}([0-9]{1}||[a-zA-Z]{1})" maxlength="9" required>
        <p class="alert alert-danger" ng-show="form.cif.$error.required && submitted">CIF es Requerido</p>
      </div>
	<div class="form-group">
        <label>Nombre de la Empresa</label>
       <input class="form-control"  type="text" ng-model="Empresa.nombre" placeholder="nombre" required maxlength="15">
        <p class="alert alert-danger" ng-show="form.nombre.$error.required && submitted">Nombre es Requerido</p>
      </div>
	<div class="form-group">
        <label>Direccion de la Empresa</label>
       <input class="form-control"  type="text" ng-model="Empresa.direccion" placeholder="direccion" maxlength="15">
        <p class="alert alert-danger" ng-show="form.direccion.$error.required && submitted">Direccion es Requerido</p>
      </div>
	<div class="form-group">
        <label>Email de la Empresa</label>
       <input class="form-control"  type="email" ng-model="Empresa.email" placeholder="email" required>
        <p class="alert alert-danger" ng-show="form.email.$error.required && submitted">Email es Requerido</p>
      </div>
   	<div class="form-group">
        <label>Localidad de la Empresa</label>
       <input class="form-control"  type="text" ng-model="Empresa.localidad" placeholder="localidad" required maxlength="15">
        <p class="alert alert-danger" ng-show="form.localidad.$error.required && submitted">Localidad es Requerido</p>
      </div>
    	<div class="form-group">
        <label>Provincia de la Empresa</label>
       <input class="form-control"  type="text" ng-model="Empresa.provincia" placeholder="provincia" required maxlength="15">
        <p class="alert alert-danger" ng-show="form.provincia.$error.required && submitted">Provincia es Requerido</p>
      </div>
      <div class="form-group">
        <label>Telefono de la Empresa</label>
       <input class="form-control"  type="tel" ng-model="Empresa.telefono" placeholder="telefono" pattern="^(?:0|\(?\+34\)?\s?|0034\s?)[1-79](?:[\.\-\s]?\d\d){4}$" required maxlength="15">
        <p class="alert alert-danger" ng-show="form.telefono.$error.required && submitted">telefono es Requerido</p>
      </div>
	<div class="form-group">
        <label>Website de la Empresa</label>
       <input class="form-control"  type="url" ng-model="Empresa.url" placeholder="Website de la Empresa" maxlength="35">
        <p class="alert alert-danger" ng-show="form.url.$error.required && submitted">Website es Requerido</p>
      </div>
      <div class="form-group">
        <label>Fax de la Empresa</label>
       <input class="form-control"  type="tel" ng-model="Empresa.fax" placeholder="Fax de la Empresa" pattern="^(?:0|\(?\+34\)?\s?|0034\s?)[1-79](?:[\.\-\s]?\d\d){4}$" maxlength="15">
        <p class="alert alert-danger" ng-show="form.fax.$error.required && submitted">Fax es Requerido</p>
      </div>
      <div class="form-group">
        <label>Numero de Empleados de la Empresa</label>
       <input class="form-control"  type="number" ng-model="Empresa.n_empleados" min="0" placeholder="Numero de Empleados de la Empresa">
        <p class="alert alert-danger" ng-show="form.n_empleados.$error.required && submitted">Numero de Empleados es Requerido</p>
      </div>
      <div class="form-group">
        <label>Sector</label>
       <p >
       <input  type="radio" name="sector" ng-model="Empresa.idsector" value="Sector Primario">
       <span>Sector Primario</span>
       </p>
      <p >
       <input   type="radio" name="sector" ng-model="Empresa.idsector" value="Sector Secundario">
       <span>Sector Secundario</span>
       </p>
       <p >
       <input  type="radio" name="sector" ng-model="Empresa.idsector" value="Sector Servicios">
       <span>Sector Servicios</span>
       </p>
	<p class="alert alert-danger" ng-show="form.idsector.$error.required && submitted">Sector es Requerido
      </div>

 <div class="actions">
        <label></label>
        <button class="btn btn-success">{{action}} Empresa</button>
      </div>
    </fieldset>
  </form>
 		 </div><!-- /card-container -->
</div><!-- /container -->
</section>
<section>
 <div class="container">
        <div class="card card-container">

         <form name="form" ng-submit="create()">
    <fieldset>
      <legend>Crear Oferta:</legend>
 <span id="reauth-email" class="reauth-email"></span>
      <div class="form-group">
        <label>Puesto</label>
       <input class="form-control"  type="text" ng-model="Oferta.puesto" placeholder="Puesto" required>
        <p class="alert alert-danger" ng-show="form.puesto.$error.required && submitted">Puesto es Requerido</p>
      </div>

      <div class="form-group">
        <label>Vacantes</label>
        <input class="form-control" type="number" min="0" ng-model="Oferta.vacantes" placeholder="Vacantes" required>
        <p class="alert alert-danger" ng-show="form.vacantes.$error.required && submitted" min="0">
            Vacantes es Requerido</p>
      </div>

        <div class="form-group">
        <label>Descripcion</label>
        <input class="form-control" type="text" ng-model="Oferta.descripcion" placeholder="descripcion" required>
        <p class="alert alert-danger" ng-show="form.descripcion.$error.required && submitted">
            descripcion es Requerido</p>
      </div>

      <div class="form-group">
        <label>Experiencia</label>
        <input class="form-control" type="text" ng-model="Oferta.experiencia" placeholder="Experiencia" required>
        <p class="alert alert-danger" ng-show="form.experiencia.$error.required && submitted">
            Experiencia es Requerida</p>
      </div>

       <div class="form-group">
        <label>Provincia</label>
        <input class="form-control" type="text" ng-model="Oferta.provincia" placeholder="Provincia" required>
        <p class="alert alert-danger" ng-show="form.provincia.$error.required && submitted">
            Provincia es Requerida</p>
      </div>

      <div class="form-group">
        <label>Localidad</label>
        <input class="form-control" type="text" ng-model="Oferta.localidad" placeholder="Localidad" required>
        <p class="alert alert-danger" ng-show="form.localidad.$error.required && submitted">
            Localidad es Requerida</p>
      </div>

      <div class="form-group">
        <label>Telefono de la Empresa</label>
       <input class="form-control"  type="tel" ng-model="Oferta.telefono" placeholder="telefono" pattern="^(?:0|\(?\+34\)?\s?|0034\s?)[1-79](?:[\.\-\s]?\d\d){4}$" >
        <p class="alert alert-danger" ng-show="form.telefono.$error.required && submitted">telefono es Requerido</p>
      </div>

      <div class="form-group">
        <label>Salario Ofrecido</label>
        <input class="form-control" type="number" min="0" ng-model="Oferta.salario_ofrecido" placeholder="Salario Ofrecido" required>
        <p class="alert alert-danger" ng-show="form.salario_ofrecido.$error.required && submitted">
            Salario Ofrecido es Requerido</p>
      </div>

       <div class="form-group">
        <label>Condiciones</label>
        <input class="form-control" type="text" ng-model="Oferta.condiciones" placeholder="Condiciones">
        <p class="alert alert-danger" ng-show="form.condiciones.$error.required && submitted">
            Condiciones es Requerido</p>
      </div>
     

     <div class="form-group">
        <label>Otras Consideraciones</label>
        <input class="form-control" type="text" ng-model="Oferta.otras_consideraciones" placeholder="Otras Consideraciones">
        <p class="alert alert-danger" ng-show="form.otras_consideraciones.$error.required && submitted">
           Otras Consideraciones es Requerido</p>
      </div>
     
 	<div class="form-group">
        <label>Duracion Meses</label>
        <input class="form-control" type="number" ng-model="Oferta.duracion_meses" placeholder="Duracion Meses" min="0" max="12" required>
        <p class="alert alert-danger" ng-show="form.duracion_meses.$error.required && submitted">
          Duracion Meses es Requerido</p>
      </div>
    
      <div class="form-group">
        <label>Fecha de Caducidad</label>
        <input class="form-control" type="text" ng-model="Oferta.fecha_caducidad" placeholder="Formato:'YYYY-MM-DD'" value="" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])" required>
        <p class="alert alert-danger" ng-show="form.fecha_caducidad.$error.required && submitted">
          Fecha de Caducidad es Requerido</p>
      </div>
      <div class="form-group">
        <label>Sector</label>
       <p >
       <input  type="radio" name="sector" ng-model="Oferta.idsector" value="Sector Primario">
       <span>Sector Primario</span>
       </p>
      <p >
       <input   type="radio" name="sector" ng-model="Oferta.idsector" value="Sector Secundario">
       <span>Sector Secundario</span>
       </p>
       <p >
       <input  type="radio" name="sector" ng-model="Oferta.idsector" value="Sector Servicios">
       <span>Sector Servicios</span>
       </p>
  <p class="alert alert-danger" ng-show="form.idsector.$error.required && submitted">Sector es Requerido
      </div>
<div class="form-group">
    <label>Oferta esta cerrada</label>
        <select  ng-model="Oferta.cerrada" >
         <option selected disabled>Si o No</option>
        <option value="Si">Si</option>
        <option value="No">No</option>
        </select>
    </div>

      <div class="actions">
        <label></label>
        <button class="btn btn-success">Crear Oferta</button>
      </div>
    </fieldset>
  </form>
 		 </div><!-- /card-container -->
</div><!-- /container -->
</section>
<section>
 <div class="container">
        <div class="card card-container">

         <form name="form" ng-submit="submitForm()">
    <fieldset>
      <legend>{{action}}&nbsp;Demandante:</legend>
 <span id="reauth-email" class="reauth-email"></span>
      <div class="form-group">
        <label>Nombre</label>
       <input class="form-control"  type="text" ng-model="Demandante.nombre" placeholder="nombre">
        <p class="alert alert-danger" ng-show="form.nombre.$error.required && submitted">nombre es Requerido</p>
      </div>

      <div ng-hide="currentUser.Empresa" class="form-group">
        <label>Apellidos</label>
        <input class="form-control" type="number" ng-model="Demandante.apellidos" placeholder="apellidos">
        <p class="alert alert-danger" ng-show="form.apellidos.$error.required && submitted">
            apellidos es Requerido</p>
      </div>

        <div class="form-group">
        <label>Email</label>
        <input class="form-control" type="email" ng-model="Demandante.email" placeholder="email">
        <p class="alert alert-danger" ng-show="form.email.$error.required && submitted">
            email es Requerido</p>
      </div>

      <div  ng-hide="currentUser.Empresa" class="form-group">
        <label>Dni</label>
        <input class="form-control" type="text" ng-model="Demandante.dni" placeholder="dni" pattern=" (([X-Z]{1})([-]?)(\d{7})([-]?)([A-Z]{1}))|((\d{8})([-]?)([A-Z]{1}))">
        <p class="alert alert-danger" ng-show="form.dni.$error.required && submitted">
            dni es Requerida</p>
      </div>

       <div ng-hide="currentUser.Empresa" class="form-group">
        <label>Fecha de Nacimiento</label>
        <input class="form-control" type="text" ng-model="Demandante.fecha_nac" placeholder="fecha_nac" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])">
        <p class="alert alert-danger" ng-show="form.fecha_nac.$error.required && submitted">
            Fecha de Nacimiento es Requerida</p>
      </div>

      <div class="form-group">
        <label>Telefono</label>
        <input class="form-control" type="tel" ng-model="Demandante.telefono" placeholder="telefono">
        <p class="alert alert-danger" ng-show="form.telefono.$error.required && submitted">
            telefono es Requerida</p>
      </div>


      <div ng-hide="currentUser.Empresa" class="form-group">
        <label>Sexo</label>
        <select  ng-model="Demandante.sexo" >
        <option selected disabled>Sexo</option>
        <option value="Hombre">Hombre</option>
        <option value="Mujer">Mujer</option>
        </select>
    </div>
      

      <div  ng-hide="currentUser.Empresa" class="form-group">
        <label>Formacion Academica</label>
        <select  ng-model="Demandante.titulaciones" >
         <option selected disabled>Formacion Academica</option>
        <option value="">Ninguna</option>
        <option value="Primaria">Primaria</option>
        <option value="PcPi o FP Basica">Pcpi o FP Basica</option>
        <option value="Secundaria">Secundaria</option>
        <option value="FP Grado Medio">FP Grado Medio</option>
        <option value="Secundaria">Secundaria</option>
        <option value="Bachillerato">Bachillerato</option>
         <option value="FP Grado Superior">FP Grado Superior</option>
          <option value="Carrera Universitaria">Carrera Universitaria</option>
        </select>
    </div>
     

     <div  ng-hide="currentUser.Empresa" class="form-group">
        <label>Experiencia</label>
        <input class="form-control" type="text" ng-model="Demandante.experiencia" placeholder="experiencia">
        <p class="alert alert-danger" ng-show="form.experiencia.$error.required && submitted">
           experiencia es Requerido</p>
      </div>
     
 	<div  ng-hide="currentUser.Empresa" class="form-group">
        <label>Idiomas</label>
        <input class="form-control" type="number" ng-model="Demandante.idiomas" placeholder="idiomas">
        <p class="alert alert-danger" ng-show="form.idiomas.$error.required && submitted">
          idiomas es Requerido</p>
      </div>
    
    <div ng-hide="currentUser.Empresa"  class="form-group">
    <label>Carnet Conducir</label>
        <select  ng-model="Demandante.conducir" >
         <option selected disabled>Si o No</option>
        <option value="Si">Si</option>
        <option value="No">No</option>
        </select>
    </div>


  <div ng-hide="currentUser.Empresa" class="form-group">
    <label>Carnet Camion</label>
        <select  ng-model="Demandante.camion" >
         <option selected disabled>Si o No</option>
        <option value="Si">Si</option>
        <option value="No">No</option>
        </select>
    </div>

    
<div ng-hide="currentUser.Empresa" class="form-group">
    <label>Discapacitado</label>
        <select  ng-model="Demandante.discapacitado" >
         <option selected disabled>Si o No</option>
        <option value="Si">Si</option>
        <option value="No">No</option>
        </select>
    </div>
      


      <div class="actions">
        <label></label>
        <button class="btn btn-success">{{action}}&nbsp;Demandante</button>
      </div>
    </fieldset>
  </form>
 		 </div><!-- /card-container -->
</div><!-- /container -->
</section>
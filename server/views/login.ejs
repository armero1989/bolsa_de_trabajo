<section>
  <form action="/api/usuarios/login" method="post">
    <fieldset>
      <legend>Login form</legend>
      <div>
        <label for="email">Email:</label>
        <input type="text" name="email" value="<%= email %>"/>
      </div>
      <div>
        <label for="password">Password:</label>
        <input type="password" name="password" value="<%= password %>"/>
      </div>
      <div>
        <input type="submit" value="Login"/>
      </div>
    </fieldset>
  </form>
</section>

<section>
  <form action="/api/usuarios" method="post">
    <fieldset>
      <legend>Sign up form</legend>
      <div>
        <label for="nombre">Nombre:</label>
        <input type="text" name="nombre" value="<%= typeof nombre!='undefined' ? nombre : '' %>"/>
      </div>
      <div>
        <label for="apellidos">Apellidos:</label>
        <input type="text" name="apellidos" value="<%= typeof apellidos!='undefined' ? apellidos : '' %>"/>
      </div>
      <div>
        <label for="email">Email:</label>
        <input type="text" name="email" value="<%= email %>"/>
      </div>
      <div>
        <label for="password">Password:</label>
        <input type="password" name="password" value="<%= password %>"/>
      </div>
      <div>
        <input type="submit" value="Sign up"/>
      </div>
    </fieldset>
  </form>
</section>

<section>
  <form action="/api/usuarios/request_password_reset" method="post">
    <fieldset>
      <legend>Reset password form</legend>
      <div>
        <label for="email">Email:</label>
        <input type="text" name="email" value="<%= email %>"/>
      </div>
      <div>
        <input type="submit" value="Reset password"/>
      </div>
    </fieldset>
  </form>
</section>

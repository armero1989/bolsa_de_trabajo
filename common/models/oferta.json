{
  "name": "Oferta",
  "plural": "Ofertas",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "puesto": {
      "type": "string",
      "required": true
    },
    "vacantes": {
      "type": "number",
      "required": true
    },
    "descripcion": {
      "type": "string",
      "required": true
    },
    "experiencia": {
      "type": "string",
      "required": true
    },
    "provincia": {
      "type": "string",
      "required": true
    },
    "localidad": {
      "type": "string",
      "required": true
    },
    "salario_ofrecido": {
      "type": "number",
      "required": true
    },
    "condiciones": {
      "type": "string",
      "required": false
    },
    "duracion_meses": {
      "type": "number",
      "required": true
    },
    "otras_consideraciones": {
      "type": "string",
      "required": false
    },
    "created_at": {
      "type": "date",
      "required": true
    },
    "fecha_caducidad": {
      "type": "date",
      "required": true
    },
    "cerrada": {
      "type": "boolean",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "empresas": {
      "type": "belongsTo",
      "model": "Empresa",
      "foreignKey": "ofertante"
    },
    "demandante": {
      "type": "hasMany",
      "model": "Demandante",
      "foreignKey": "userId",
      "through": "Inscrito"
    },
    "demandantes": {
      "type": "belongsTo",
      "model": "demandante",
      "foreignKey": "demandante"
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    }
  ],
  "methods": {}
}

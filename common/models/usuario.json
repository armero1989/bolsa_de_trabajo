{
  "name": "Usuario",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required":true
    },
    "apellidos":{
      "type": "string"
    },
    "dni": {
      "type": "string"
    },
    "fecha_nac": {
      "type": "date"
    },
    "telefono": {
      "type": "string",
      "required":true
    },
    "Empresa": {
      "type": "boolean"
    },
    "admin": {
      "type": "boolean"
    }
  },
  "validations": [],
  "relations": {
    "ofertas": {
      "type": "hasMany",
      "model": "Oferta",
      "foreignKey": "ofertaId",
      "through": "Inscrito"
    },
    "Empresas":{
      "type":"hasOne",
      "model":"Empresa",
      "foreignKey":""
    },
    "demandantes": {
      "type": "hasOne",
      "model": "Demandante",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "request_password_reset"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "reset_password_get"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "reset_password_post"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
